@model CustomerModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
	<div class="row row-cols-1 row-cols-md-3 g-4">
		@foreach (var movie in Model.Customer)
		{
			<div class="col">
				<div class="card h-100">
					<div class="card-body">
						<h5 class="card-title">@movie.Name</h5>
						<p class="card-text">@movie.Surname</p>
						<p class="card-text">@movie.AddressLine1</p>
						<p class="card-text">@movie.AddedDate</p>
					</div>
				</div>
			</div>
		}
	</div>
</div>
